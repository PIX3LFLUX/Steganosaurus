#initialize the different Screens
#:import platform kivy.utils.platform

#:import Clipboard kivy.core.clipboard.Clipboard

<WindowManager>:


    MainMenu:  
    DecodeStego:
    EncodeStego:
    LoadDialog:
    SaveDialog:
    EncodeStegoOptions:
    ShowCut:
    ShowSecretMessage:


<MainMenu>:
    name:"main"

    FloatLayout:
        
        orientation:"vertical"
        size: root.width, root.height
        padding: 10
        spacing: 30

        MDLabel:
            markup: True
            text: "[b]Steganography App[/b]"
            halign: "center"
            font_size:45
            pos_hint: { 'x':0, 'y':.4}
     
        MDFillRoundFlatButton:   
            markup: True
            text: "[b]Encode\nStego Image[/b]"
            #halign: "center"
            font_size: 30
            pos_hint: { 'x':0.15, 'y':.45}
            size_hint:(.7,.2)
            on_release: 
                app.root.current = "encode"
                root.manager.transition.direction = "left"

        MDFillRoundFlatButton:
            markup: True
            text: "[b]Decode\nStego Image[/b]" 
            font_size: 30
            size_hint:(.7,.2)
            pos_hint: { 'x':0.15, 'y':.2}

            on_release: 
                app.root.current = "decode"
                root.manager.transition.direction = "left"

        Label:
            text: "By Deniz Braun\nand Maximilian Ketschik"
            font_size: 24
            pos_hint: { 'x':0, 'y':-.45}
            valign: "top"
            halign: "center"
            
            #width: 80
            #height: 50



#Verschlüsseln
<EncodeStego>:
    name:"encode"
    message:message

    FloatLayout:

        MDFillRoundFlatButton:
            
            markup: True
            text: "[b]Back[/b]"
            font_size: 30
            pos_hint: { 'x':.1, 'y':.85}
            size_hint:(.35,.1)
            on_release: 
                app.root.current = "main"
                root.manager.transition.direction = "right"
        
        MDFillRoundFlatButton:
            
            markup: True
            text: "[b]Options[/b]"
            font_size: 30
            pos_hint: { 'x':0.55, 'y':.85} 
            size_hint:(.35,.1)

            on_release: 
                app.root.current = "encodeoptions"
                root.manager.transition.direction = "right"        

        MDTextField:
            id: message
            pos_hint: { 'x':.05, 'y':0.3} 
            size_hint:(.9,.3)
            hint_text: "Enter your Secret Message"
            mode: "fill"
            multiline:True

        MDFillRoundFlatButton:
            markup: True
            text: "[b]Choose\nStego Image[/b]"
            pos_hint: { 'x':0.15, 'y':.1} 
            size_hint:(.7,.1)
            font_size: 30
            on_release: 
                app.root.current = "savedialog"
                root.manager.transition.direction = "left"
                root.pushMessage()
<EncodeStegoOptions>:
    name:"encodeoptions"
    recursiveCounter:recursiveCounter
    
    FloatLayout:
        orientation:"vertical"
        size: root.width, root.height
        padding: 50
        spacing: 30

        MDFillRoundFlatButton:
                
            markup: True
            text: "[b]Back[/b]"
            font_size: 30
            pos_hint: { 'x':.1, 'y':.85}
            size_hint:(.35,.1)
            on_release: 
                app.root.current = "encode"
                root.manager.transition.direction = "left"
                root.pushRecursiveCounter()
                

        Label: 
            id: optimize
            pos_hint: { 'x':.1, 'y':.6}
            size_hint:(.35,.1)
            text:"optimize cut"
            font_size: 30
        MDSwitch:

            pos_hint: { 'x':.7, 'y':.6}
            size_hint:(.12,.1)
            on_active: root.checkbox_click(self, self.active)

        Label: 
            id: textboxRC
            font_size: 25
            text:"Enter recursive counter (Default=1): "
            pos_hint: { 'x':.32, 'y':.3}
            size_hint:(.35,.1)

        FloatLayout:
            MDSlider:
                id: recursiveCounter
                pos_hint: { 'x':.1, 'y':.2}
                size_hint:(.8,.1)
                color: app.theme_cls.accent_color
                min:0
                max:10
                value:1
#Entschlüsseln
<DecodeStego>:
    cut:cut
    name:"decode"

    FloatLayout:
        orientation:"vertical"
        size: root.width, root.height
        padding: 50
        spacing: 20

       

        MDFillRoundFlatButton: 
            markup: True
            text: "[b]Back[/b]"
            font_size: 30
            pos_hint: { 'x':.1, 'y':.85}
            size_hint:(.35,.1)
            on_release: 
                app.root.current = "main"
                root.manager.transition.direction = "right"

        MDTextField:
            id:cut
            pos_hint: { 'x':.05, 'y':0.3} 
            size_hint:(.9,.3)
            hint_text: "Enter your Secret Key"
            mode: "fill"
            multiline:True

        MDFillRoundFlatButton:  
            markup: True
            pos_hint: { 'x':0.15, 'y':.1} 
            size_hint:(.7,.1)
            font_size: 30
            text: "[b]Load\nStego Image[/b]"
            on_release: 
                app.root.current = "loaddialog"
                root.manager.transition.direction = "left"
                root.pushCut()

<ShowCut>:
    name:"showcut"
    FloatLayout:
        size: root.width, root.height
        padding: 50
        spacing: 20
        orientation:"vertical"

        MDFillRoundFlatButton:
            text:"Back"
            pos_hint: { 'x':.1, 'y':.85}
            size_hint:(.35,.1)
            on_release: 
                app.root.current = "main"
                root.manager.transition.direction = "left"
        Label:
            text:"Your secret Key:"
            pos_hint: { 'x':.05, 'y':0.5} 
            size_hint:(.9,.3)
            font_size:30

        MDTextField:
            id: calculatedCut
            pos_hint: { 'x':.05, 'y':0.3} 
            size_hint:(.9,.3)
            multiline: True
        MDFillRoundFlatButton:
            text:"Copy to clipboard"
            pos_hint: { 'x':0.15, 'y':.1} 
            size_hint:(.7,.1)
            font_size: 30
            on_release:
                self.text = "Copied!"
                Clipboard.copy(calculatedCut.text)
                
<LoadDialog>:
    name:"loaddialog"
    FloatLayout:
        
        FileChooserListView:
            id: filechooser
            pos_hint: {'x':0, 'y':0}
            size_hint:(1,1)
            font_size: 40
            rootpath: '/storage/emulated/0' if platform == 'android' else '/'


        MDFillRoundFlatButton: 
            text: "Cancel"
            pos_hint: { 'x':0, 'y':0}
            size_hint:(.49,.1)
            font_size: 20
            on_release: 
                app.root.current = "decode"
                root.manager.transition.direction = "right" 
        MDFillRoundFlatButton:  
            text: "Load"
            pos_hint: { 'x':.51, 'y':0}
            size_hint:(.49,.1)
            font_size: 20
            
            #size_hint:(1,1.1)
            on_release: 
                root.load(filechooser.path, filechooser.selection)
                app.root.current = "showmessage" 
                root.manager.transition.direction = "left"


<SaveDialog>:
    name:"savedialog"
    #text_input: text_input
    FloatLayout:

        FileChooserListView:
            id: filechooser
            rootpath: '/' if platform == 'win' else '/storage/emulated/0/'
            #on_selection: text_input.text = self.selection and self.selection[0] or ''
            pos_hint: {'x':0, 'y':0}
            size_hint:(1,1)
            font_size: 40
        
            #size_hint_y: None
            height: 30
        MDFillRoundFlatButton:
            text: "Cancel"
            pos_hint: { 'x':0, 'y':0}
            size_hint:(.49,.1)
            font_size: 20
            on_release: 
                app.root.current = "encode"
                root.manager.transition.direction = "right"

        MDFillRoundFlatButton:
            text: "Load and hide"
            pos_hint: { 'x':.51, 'y':0}
            size_hint:(.49,.1)
            font_size: 20
            on_release:
                text:"encoding"
                root.save(filechooser.path, filechooser.selection)
                app.root.current = "showcut"
                root.manager.transition.direction = "right"

<ShowSecretMessage>:
    name:"showmessage"
    message_output:message_output

    FloatLayout:
        size:root.size
        pos: root.pos
        orientation:"vertical"

        MDFillRoundFlatButton:
            text:"Back"
            font_size: 30
            pos_hint: { 'x':.1, 'y':.85}
            size_hint:(.35,.1)
            on_release: 
                app.root.current = "main"
                root.manager.transition.direction = "right"

        Label:
            text:"Your secret Message:"
            pos_hint: { 'x':.05, 'y':0.5} 
            size_hint:(.9,.3)
            font_size:30

        MDTextField:
            id: message_output
            pos_hint: { 'x':.05, 'y':0.3} 
            size_hint:(.9,.3)
            multiline: True

        MDFillRoundFlatButton:
            text:"Copy to clipboard"
            pos_hint: { 'x':0.15, 'y':.1} 
            size_hint:(.7,.1)
            font_size: 30
            on_release:
                self.text = "Copied!"
                Clipboard.copy(message_output.text)


